<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="uk.org.rbc1b.roms.db">
  <class name="uk.org.rbc1b.roms.db.email.Email" table="Email">
    <id name="emailId">
      <generator class="identity"/>
    </id>
    <property length="250" name="recipient"/>
    <property length="250" name="cc"/>
    <property length="250" name="replyTo"/>
    <property length="250" name="subject"/>
    <property length="65000" name="text"/>
    <property name="html" />
  </class>
</hibernate-mapping>
