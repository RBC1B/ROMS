<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="uk.org.rbc1b.roms.db">
  <class name="uk.org.rbc1b.roms.db.Email" table="Email">
    <id name="emailId">
      <generator class="identity"/>
    </id>
    <property length="250" name="recipient"/>
    <property length="250" name="subject"/>
    <property length="1000" name="text"/>
    <set inverse="true" lazy="false" name="emailAttachments">
      <key column="emailId" not-null="true"/>
      <one-to-many class="uk.org.rbc1b.roms.db.EmailAttachment"/>
    </set>
  </class>
</hibernate-mapping>
