<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping  package="uk.org.rbc1b.roms.db.volunteer">
    <class name="Assignment" table="Assignment">
        <id name="assignmentId" >
            <generator class="identity"/>
        </id>
        <property name="personId" />
        <property name="departmentId" />
        <property name="roleId" />
        <property name="assignedDate" />
        <property name="tradeNumberId" />
        <property name="teamId" />
        <property name="updateTime" not-null="true"  />
        <property name="updatedBy" not-null="true"  />
    </class>
</hibernate-mapping>
