<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="uk.org.rbc1b.roms.db.MailRecipient">
        <id name="mailRecipientId">
            <generator class="identity" />
        </id>
        <many-to-one column="MailTypeId"
                     name="mailType"
                     class="uk.org.rbc1b.roms.db.MailType"
                     not-null="true"
                     lazy="false" />
        <many-to-one column="PersonId"
                     name="person"
                     class="uk.org.rbc1b.roms.db.Person"
                     not-null="true" />
    </class>
</hibernate-mapping>
