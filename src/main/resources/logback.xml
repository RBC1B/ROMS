<?xml version="1.0" encoding="UTF-8" ?>
<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd_HH:mm:ss.SSS} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <category name="org.springframework" additivity="false" level="ERROR" />

    <category name="org.hibernate" additivity="false" level="INFO" />

    <category name="org.hibernate.type" additivity="false" level="INFO" />

    <category name="org.hibernate.SQL" additivity="false" level="INFO" />

    <root level="ERROR">
        <appender-ref ref="STDOUT" />
    </root>

</configuration>
